RED="\033[31m"
PINK="\033[1;31m"
MUSTARD="\033[33m"
YELLOW="\033[1;33m"
GREEN="\033[32m"
PURPLE="\033[35m"
WHITE="\033[1;37m"
CYAN="\033[1;36m"
RESET="\033[m"


function git_fetch_origin() {
    local shortDirname
    shortDirname=$(basename $1)

    if [ -e $1/.git ]; then
        cd $1
        printf "    %s -- " "${shortDirname}"
        git fetch --all
    fi
}

for repoPath in ${REPOPATHS//:/ }
do
    echo
    echo $repoPath
    echo
    for d in ${repoPath}/* ; do
        git_fetch_origin $d
    done
done
echo
